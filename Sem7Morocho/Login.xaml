<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sem7Morocho.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Bienvenido al Sistema" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>

            <Entry x:Name="txtcontrasena" Placeholder="Ingrese el contrasena" IsPassword="True"/>

            <Button x:Name="btnIniciar" Text="Iniciar Sesion" Clicked="btnIniciar_Clicked" BackgroundColor="#2196F3" TextColor="White"/>
            <Button x:Name="btnRegistar" Text="Registro" Clicked="btnRegistar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
