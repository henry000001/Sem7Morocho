<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sem7Morocho.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>


            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" />

            <Entry x:Name="txtContraseña" Placeholder="Ingrese la contraseña" IsPassword="True" />
            <Button x:Name="btnregistro" Text="Registro" Clicked="btnregistro_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
